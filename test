let DPT =
    [
      { name: "DB" },
      { name: "DGEAE" },
      { name: "DSP" },
      { name: "DPE" },
      { name: "SAF" },
      { name: "SPERS" },
      { name: "SCI" },
      { name: "SAI" },
      { name: "SCGA" },
      { name: "SSEB" },
      { name: "SPE" },
      { name: "SCOM" },
      { name: "PRMP" },
      { name: "CIFAG" },
      { name: "CA" },
    ] || JSON.parse(localStorage["DPT"] || "[]");
  //======================================================Gestion page login=========================================================
  vm.loginVM = function () {
    sessionStorage.setItem("authenticate", false);

    //  Login
    $("#soumettre").click(function () {
      sessionStorage.setItem("authenticate", true);
      $.router.go("admin.dashboard");
    });
  };

  //====================================================Gestion page département=================================================
  vm.dashboardVM = function () {
    //Récupérer les départements du localStorage
    $(document).ready(function () {
      $(".dpt").empty();
      //let local_DPT = JSON.parse(localStorage["DPT"] || "[]");
      DPT.forEach((dpt, index) => {
        let template = `<button class="dashboard__item bg-gray-200 bg-opacity-50 grid-rows-3 w-full h-16 rounded-lg text-xl text-opacity-25 focus:outline-none flex items-center cursor-pointer m-1 " >
        <h1 class=" w-full text-center text-3xl"> ${dpt.name} </h1>
        </button>`;
        $(".dashboard__add").before(template);
        //Redirection vers page département sur click
        $(".dashboard__item").click(function () {
          $.router.go("admin.departement");
        });
      });
    });

    //Ajouter la valeur saisi quand on appuie sur "ENTREE"
    $(document).on("keypress", "#add__input", function (e) {
      let dpt = $("#add__input").val();
      let item_template = `<a href="/departement/"><button class="dashboard__item bg-gray-200 bg-opacity-50 grid-rows-3 w-full h-16 rounded-lg text-xl text-opacity-25 focus:outline-none flex items-center cursor-pointer " >
      <h1 class ="text-center w-full text-3xl"> ${dpt} </h1>
      </button></a>`;
      if (dpt === "") {
        console.log("saisir");
      } else {
        if (e.which === 13) {
          //Push des valeurs saisie dans l'array DPT
          DPT.push({ name: dpt });
          // Stocké l'array DPT dans le local Storage
          let DPT__JSON = JSON.stringify(DPT);
          localStorage.setItem("DPT", DPT__JSON);
          e.preventDefault();
          //réinisialisé  l'input
          $("#add__input").val(null);
          //ajout au DOM de la valeur saisie
          $(".dashboard__add").before(item_template);
          //Redirection de l'élement dynamique vers page département sur click
          $(document).find(
            $(".dashboard__item").click(function () {
              $.router.go("admin.departement");
            })
          );
        }
      }
    });
    localStorage.setItem("DPT", JSON.stringify(DPT));
  };

  //======================================================Gestion page Service===========================================
  vm.dptVM = function (route, param) {
    console.log(param);
    let services = ["SSB", "SRF", "SSSA", "SSPI", "SRB"];
    let divisions = ["SCME", "SREX", "SAEPB", "SLF", "SLR"];
    $(document).ready(function () {
      //Rendu des service sur le DOM
      let counter = 0;
      services.forEach((service) => {
        //template des services
        counter++;
        let service__template = `<div
      class="dpt__item mb-6 bg-gray-200 bg-opacity-50 grid-rows-3 w-64 h-16 rounded-lg text-xl text-opacity-25 focus:outline-none flex justify-center items-center cursor-pointer ">
      <h1 class=" text-3xl"> ${service} </h1>
  </div>`;

        //template container des division
        let dvs__container = `<div class="divisions__container-${counter} w-full flex justify-between h-16 mb-6">
        
      </div>`;

        //Rendu des divisions sur le DOM
        $(".dpt__services").append(service__template);
        $(".dpt__divisions").append(dvs__container);
      });
      divisions.forEach((division) => {
        let dvs__template = `<div
        class="services__item mb-6 bg-gray-200 bg-opacity-50 grid-rows-3 w-32 h-16 rounded-lg text-xl text-opacity-25 focus:outline-none flex justify-center items-center cursor-pointer ">
        <h1 class=" w-full text-center text-3xl"> ${division} </h1>
    </div>`;
        $(".divisions__container-1").append(dvs__template);
        $(".divisions__container-1").hide();

        //Redirection vers page division
        $(".services__item").click(function () {
          $.router.go("admin.divisions");
        });
      });

      //Derouler les divisions
      $(".dpt__item").click(function () {
        $(".divisions__container-1").toggle("magictime slideLeft");
        $(".divisions__container-1").show();
      });
    });
  };

  //Gestion page divisions
  
  vm.divisionVM = function () {
    
      $('.modal').hide()
      $(".modal").modal({
        fadeDuration: 300,
        showClose: false
      });
      let volets = [
        {
          id: 1,
          name: "Volet #01",
          tasks: [{ title: "Task #01" }, { title: "Task #02" }],
        },
        {
          id: 2,
          name: "Volet #02",
          tasks: [
            { title: "Task #01" },
            { title: "Task #02" },
            { title: "Task #03" },
            { title: "Task #04" },
            { title: "Task #04" },
          ],
        },
      ];

      volets.forEach((volet) => {
        const voletElement = `<div class="volet__container volet-${volet.id} bg-gray-300 bg-opacity-50   w-56 rounded-lg mx-8  ">
            <div class=" volet__title bg-green-400 h-10 rounded-lg flex items-center  ">
                <h1 class="ml-4 w-56 text-lg">${volet.name}</h1>
                <span class="volet__icon w-12  flex items-center text-2xl opacity-50">
                    <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                </span>
            </div>
            <div class="volet__content-${volet.id}  w-full px-2  mb-2 flex flex-col overflow-hidden">
                <div class=" task__container-${volet.id} w-full overflow-y-auto pr-2 pt-4">
                    <span class="volet__action-${volet.id}  w-full h-10 my-2 rounded-lg flex items-center ">
                        <div
                            class="w-full relative h-full h-10 bg-opacity-50 rounded-lg flex items-center  focus:outline-none hover:bg-blue-500 hover:text-gray-100 ">
                            <span class=" absolute  h-full w-10 flex items-center justify-center text-lg opacity-50"><i
                                    class="fa fa-plus" aria-hidden="true"></i></span>
                            <input class=" w-full h-full pl-10 opacity-50 text-sm rounded-lg opacity-50 focus:outline-none focus:opacity-100 focus:bg-gray-500 " placeholder="Ajouter une carte"/>
                        </div>
                    </span>
                </div>
            </div>
            </div>
          `;

        $(".division__container").append(voletElement);

        volet.tasks.forEach((task) => {
          const spanElement = `<span 
            class=" task w-full h-10 bg-gray-300 bg-opacity-50 rounded-lg flex items-center px-2 focus:outline-none hover:bg-blue-500 hover:text-gray-100 mb-2">
            <h1 class="w-3/4">${task.title}</h1>
            <span class="h-full w-1/4 flex items-center justify-center text-lg opacity-50"><i
                    class="fa fa-bars" aria-hidden="true"></i></span>
        </span>`;
          $(`.volet__action-${volet.id}`).before(spanElement);
        });
        
      
          
       

        const taskContainer = $(`.task__container-${volet.id}`).children()
          .length;

        if (taskContainer <= 2) {
          $(`.volet__content-${volet.id}`).removeClass("h-56");
          $(`.volet-${volet.id}`).addClass("h-40");
          $(`.task__container-${volet.id}`).removeClass("pr-2");
        } else if (taskContainer >= 2) {
          $(`.volet__content-${volet.id}`).addClass("h-56");
          $(`.task__container-${volet.id}`).addClass("pr-2");
        }
        
      });

      //gestion overflow
    
  };
